<div class="card mb-3">
  <div class="card-body">
    <div class="row d-flex flex-row align-items-center justify-content-between">
      <div class="d-flex flex-column col-4 mr-0 p-0">
        <div>
          <p class="card-text"><%= transaction.name%></p>
        </div>
        <div class="d-flex">
          <strong>Category: </strong>
          <a class="m-0" href="/categories/<%= transaction.category_id %>"><p class="card-text mx-1"><%= transaction.category.name%></p></a>
        </div>
        <div>
          <p class="card-text">$<%= transaction.amount %></p>
        </div>
      </div>
      <div class="col-3 ml-0 w-3">
        <%= button_to transaction_path(transaction.id), class:"btn", method: :delete do %>
          <img src="/assets/delete.png" style="width: 2rem">
        <% end %>
      </div>
    </div>
  </div>
</div>
